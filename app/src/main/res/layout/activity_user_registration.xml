<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserRegistration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration From"
                android:textSize="23sp"
                android:textAlignment="center"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >
                    <ImageView
                        android:id="@+id/image_add_user_name"
                        android:layout_marginTop="30dp"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="#D0FFD7"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >
                    <EditText
                        android:id="@+id/edit_add_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:ems="10"
                        android:hint="Full Name"

                        android:inputType="textCapCharacters"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_add_user_address_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="University Name"
                        android:layout_marginTop="15dp"
                        android:inputType="text"

                        android:padding="12dp"
                        />
                    <EditText
                        android:id="@+id/edit_add_user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Phone Number"
                        android:inputType="number"
                        android:layout_marginTop="15dp"

                        android:padding="12dp"
                        />




                    <LinearLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">



                        <RadioGroup
                            android:id="@+id/user_add_info_radio_group_user_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RadioButton android:id="@+id/radio_rider"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Teacher"
                                android:layout_marginRight="10dp"/>
                            <RadioButton android:id="@+id/radio_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Student"
                                android:layout_marginLeft="10dp"/>

                            <RadioButton
                                android:id="@+id/radio_admin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="Admin"
                                android:visibility="gone"
                                tools:visibility="gone" />

                        </RadioGroup>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout><Button
            android:id="@+id/user_infor_update_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:paddingHorizontal="50dp"
            android:text="UPLOAD" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>